<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calculator.example.akankshabodhankar.calculator.MainActivity"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="display"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/display_tv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:id="@+id/input_tv"
        android:layout_marginTop="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/display_tv"
        android:text="|" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/input_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:stretchColumns="*"
        android:layout_alignParentStart="true">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/C_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="C" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/back_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="&lt;---" />

            <!-- Column 3 -->
            <Button
                android:id="@+id/tbl_txt3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="1/x" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/sign_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="+/-" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/root_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="root" />

            <!-- Column 3 -->
            <Button
                android:id="@+id/square_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="square" />
            <!-- Column 3 -->
            <Button
                android:id="@+id/div_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="/" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/seven_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="7" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/eight_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="8" />

            <!-- Column 3 -->
            <Button
                android:id="@+id/nine_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="9" />
            <!-- Column 3 -->
            <Button
                android:id="@+id/mul_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="*" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/four_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="4" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/five_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="5" />

            <!-- Column 3 -->
            <Button
                android:id="@+id/six_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="6" />
            <!-- Column 3 -->
            <Button
                android:id="@+id/sub_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/one_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="1" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/two_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="2" />

            <!-- Column 3 -->
            <Button
                android:id="@+id/three_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="3" />
            <!-- Column 3 -->
            <Button
                android:id="@+id/add_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="+" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Column 1 -->
            <Button
                android:id="@+id/zero_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="0" />

            <!-- Column 2 -->
            <Button
                android:id="@+id/dot_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="." />


            <!-- Column 3 -->
            <Button
                android:id="@+id/equal_bt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:text="=" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
